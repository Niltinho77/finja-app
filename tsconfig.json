{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",          // ðŸ‘ˆ envia todos .js compilados pra dist/
    "rootDir": "src",          // ðŸ‘ˆ indica onde estÃ£o os .ts
    "noImplicitAny": false,    // ðŸ‘ˆ evita erros chatos do finiaCore.ts
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
